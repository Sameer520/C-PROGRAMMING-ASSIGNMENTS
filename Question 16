#include <stdio.h>

int main() {
    int arr[] = {2, 5, 7, 8, 10, 11, 13, 14};
    int n = sizeof(arr) / sizeof(arr[0]);
    int i, j, k;
    int evenCount = 0, oddCount = 0;

    // counting the number of even and odd elements in the array
    for (i = 0; i < n; i++) {
        if (arr[i] % 2 == 0) {
            evenCount++;
        } else {
            oddCount++;
        }
    }

    // creating separate arrays for even and odd elements
    int evenArray[evenCount], oddArray[oddCount];
    j = 0, k = 0;
    for (i = 0; i < n; i++) {
        if (arr[i] % 2 == 0) {
            evenArray[j++] = arr[i];
        } else {
            oddArray[k++] = arr[i];
        }
    }

    // printing the even elements array
    printf("Even Array: ");
    for (i = 0; i < evenCount; i++) {
        printf("%d ", evenArray[i]);
    }
printf("\n");

    // printing the odd elements array
    printf("Odd Array: ");
    for (i = 0; i < oddCount; i++) {
        printf("%d ", oddArray[i]);
    }
    printf("\n");

    return 0;
}
